{% extends "layout.njk" %}

{% set pageTitle = applicationName + " - Home" %}
{% set pageId = 'display-barcode' %}

{% block content %}

  <main class="app-container govuk-body">

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">Your barcode has been created</h1>
      </div>
    </div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <p data-qa="barcode-result">Your barcode is {{ barcode }}</p>
      </div>
    </div>
  </main>

{% endblock %}
