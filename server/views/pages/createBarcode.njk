{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Home" %}
{% set pageId = 'create-barcode' %}

{% block content %}

  <main class="app-container govuk-body">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">Create a barcode for secure mail</h1>
      </div>
    </div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <form id="email-form" action="/token" method="post">
          <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
          <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
              <h2 class="govuk-fieldset__heading">Enter a prisoner number</h2>
            </legend>
            <div class="govuk-form-group">
              <label class="govuk-label" for="email">Prisoner number</label>
              <input id="prisoner" name="prisoner" class="govuk-input" type="text">
            </div>
            <div class="govuk-button-group">
              <button class="govuk-button">Continue</button>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </main>

{% endblock %}
